<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Olympics.dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_blue</item>
    </style>

    <style name="splash_screen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSplashscreenContent" tools:targetApi="o">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>

</resources>